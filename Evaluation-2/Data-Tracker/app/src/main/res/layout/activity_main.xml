<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/etEmailid"
        android:layout_margin="10dp"
        android:padding="30dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_rectangle_8"
        android:layout_height="wrap_content"
        android:hint="@string/enter_the_email_id"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/ic_rectangle_8"
        android:layout_below="@id/etEmailid"
        android:padding="30dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_the_password"
        android:textSize="20dp"/>

    <CheckBox
        android:id="@+id/etcheckbox"
        android:layout_below="@id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me "
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_toEndOf="@id/etcheckbox"
        android:layout_below="@id/etPassword" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnLogin"
        android:layout_below="@id/etcheckbox"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"/>


</RelativeLayout>